<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".CreatePlan">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCreatePlanTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yeni Plan Oluştur"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1C4E80"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tarih Seç (GG/AA/YYYY)"
            android:focusable="false"
            android:inputType="none"
            android:drawableEnd="@android:drawable/ic_menu_my_calendar"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvCreatePlanTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Saat Seç (SS:DD)"
            android:focusable="false"
            android:inputType="none"
            android:drawableEnd="@android:drawable/ic_lock_idle_alarm"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Not (ör. Ali ile özel ders)"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/etTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Kaydet Butonu -->
        <Button
            android:id="@+id/btnSavePlan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Planı Kaydet"
            android:textStyle="bold"
            android:backgroundTint="#1C4E80"
            android:textColor="#FFFFFF"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/etNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Takvim -->
        <com.prolificinteractive.materialcalendarview.MaterialCalendarView
            android:id="@+id/calendarView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:mcv_showOtherDates="all"
            app:mcv_selectionColor="@color/purple_500"
            app:layout_constraintTop_toBottomOf="@id/btnSavePlan"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Planlar Listesi -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/calendarView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
